# Blog Posts

{% set posts = collections.posts | reverse %}
{% for post in posts %}
  <article>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p class="meta">{{ post.date | date("MMMM D, YYYY") }}</p>
    <p>{{ post.data.excerpt }}</p>
  </article>
{% endfor %}
